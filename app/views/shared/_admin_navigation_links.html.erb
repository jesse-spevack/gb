<%# Admin navigation links shared between mobile and desktop sidebars %>
<% if Current.user.admin? %>
  <div class="text-xs/6 font-semibold text-gray-400">Admin</div>
  <ul role="list" class="-mx-2 mt-2 space-y-1">
    <li>
        <%= link_to '#', class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{current_page?('/dashboard') ? 'bg-gray-50 text-blue-600' : 'text-gray-700 hover:bg-gray-50 hover:text-blue-600'}" do %>
            <%= render "shared/icons/users", aria_hidden: true, focusable: false, class: "size-6 shrink-0 text-gray-400 group-hover:text-blue-600" %>
            Users
        <% end %>
    </li>
    <li>
        <%= link_to '#', class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold #{current_page?('/dashboard') ? 'bg-gray-50 text-blue-600' : 'text-gray-700 hover:bg-gray-50 hover:text-blue-600'}" do %>
            <%= render "shared/icons/trash", aria_hidden: true, focusable: false, class: "size-6 shrink-0 text-gray-400 group-hover:text-blue-600" %>
            Trash
        <% end %>
    </li>
  </ul>
<% end %> 