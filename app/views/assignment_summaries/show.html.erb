<div class="mx-auto px-4 sm:px-6 lg:px-8 py-10 max-w-4xl">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center mb-2">
      <%= link_to assignment_path(@assignment), class: "mr-3 p-2 rounded-full hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" do %>
        <%= render "shared/icons/arrow_left", aria_hidden: true, focusable: false, class: "w-5 h-5 text-gray-600" %>
      <% end %>
      <h1 class="text-2xl font-bold text-gray-900">Assignment Summary</h1>
    </div>
  </div>

  <!-- Summary Content -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900"><%= @assignment.title %></h2>
      <p class="text-sm text-gray-600 mt-1">Student work count: <%= @assignment_summary.student_work_count %></p>
    </div>
    
    <div class="px-6 py-4">
      <!-- Qualitative Insights -->
      <div class="mb-6">
        <h3 class="text-base font-semibold text-gray-900 mb-3">Qualitative Insights</h3>
        <div class="prose max-w-none text-gray-700">
          <%= simple_format(@assignment_summary.qualitative_insights) %>
        </div>
      </div>

      <!-- Feedback Items -->
      <% if @assignment_summary.feedback_items.any? %>
        <div>
          <h3 class="text-base font-semibold text-gray-900 mb-3">Detailed Feedback</h3>
          <div class="space-y-4">
            <% @assignment_summary.feedback_items.each do |feedback| %>
              <div class="bg-green-50 border-l-4 border-green-400 p-4">
                <h4 class="text-sm font-medium text-green-900 mb-1"><%= feedback.title %></h4>
                <p class="text-sm text-green-800 mb-2"><%= feedback.description %></p>
                <% if feedback.evidence.present? %>
                  <p class="text-sm text-green-700 italic">Evidence: <%= feedback.evidence %></p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>