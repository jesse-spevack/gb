<div class="min-h-screen">
  <!-- Header with Assignment Info -->
  <div class="bg-white border-b border-gray-200">
    <div class="px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">
            <%= link_to @assignment.title, assignment_path(@assignment), class: "text-blue-600 hover:text-blue-800" %>
          </h1>
          <div class="mt-1 flex items-center text-sm text-gray-600">
            <span>Student: <%= @student_work.selected_document.title %></span>
            <span class="mx-2">•</span>
            <span>Reviewed: <%= @student_work.updated_at.strftime("%b %d, %Y at %l:%M %p") %></span>
          </div>
        </div>
        <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center">
          <%= render "shared/icons/send", class: "w-4 h-4 mr-2" %>
          Share feedback with student
        </button>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="px-4 sm:px-6 lg:px-8 py-6">
    <!-- Overall Performance and Summary Stats -->
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-6 mb-6">
      <!-- Overall Performance Badge -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-sm font-medium text-gray-600 mb-2">Overall performance</h3>
        <%= render "shared/performance_badge", level: @student_work.high_level_feedback_average %>
      </div>

      <!-- Strengths Count -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-sm font-medium text-gray-600 mb-2">Strengths identified</h3>
        <p class="text-3xl font-bold text-green-600"><%= @student_work.feedback_items.strengths.count %></p>
        <p class="text-sm text-gray-500 mt-1">Key areas of excellence</p>
      </div>

      <!-- Growth Areas Count -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-sm font-medium text-gray-600 mb-2">Growth areas</h3>
        <p class="text-3xl font-bold text-amber-600"><%= @student_work.feedback_items.opportunities.count %></p>
        <p class="text-sm text-gray-500 mt-1">Opportunities to improve</p>
      </div>

      <!-- Plagiarism Check -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-sm font-medium text-gray-600 mb-2">Plagiarism check</h3>
        <% plagiarism_check = @student_work.student_work_checks.plagiarism.first %>
        <% if plagiarism_check %>
          <% score = plagiarism_check.score.to_i %>
          <% color_class = score <= 15 ? "text-green-600" : score <= 30 ? "text-amber-600" : "text-red-600" %>
          <p class="text-3xl font-bold <%= color_class %>"><%= score %>%</p>
          <p class="text-sm text-gray-500 mt-1">Similarity detected</p>
        <% else %>
          <p class="text-3xl font-bold text-gray-400">N/A</p>
          <p class="text-sm text-gray-500 mt-1">Not available</p>
        <% end %>
      </div>

      <!-- AI Detection -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-sm font-medium text-gray-600 mb-2">AI detection</h3>
        <% ai_check = @student_work.student_work_checks.llm_generated.first %>
        <% if ai_check %>
          <% score = ai_check.score.to_i %>
          <% color_class = score <= 15 ? "text-green-600" : score <= 30 ? "text-amber-600" : "text-red-600" %>
          <p class="text-3xl font-bold <%= color_class %>"><%= score %>%</p>
          <p class="text-sm text-gray-500 mt-1">AI-generated content</p>
        <% else %>
          <p class="text-3xl font-bold text-gray-400">N/A</p>
          <p class="text-sm text-gray-500 mt-1">Not available</p>
        <% end %>
      </div>
    </div>

    <!-- Visual Rubric Overview -->
    <% if @assignment.rubric && @student_work.student_criterion_levels.any? %>
      <% 
        # Get levels from the first criterion (assuming all criteria have the same level structure)
        # Sort by position ascending (1 = best/Excellent, 4 = worst/Needs Improvement)
        all_levels = @assignment.rubric.criteria.first&.levels&.reorder(:position)
      %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Rubric overview</h2>
        </div>
        <div class="px-6 py-4">
          <div class="overflow-x-auto">
            <table class="min-w-full table-fixed">
              <thead>
                <tr class="border-b border-gray-200">
                  <th class="text-left py-2 px-3 text-sm font-medium text-gray-600 w-1/3">Criterion</th>
                  <% all_levels.each do |level| %>
                    <th class="text-center py-2 px-3 text-sm font-medium text-gray-600 w-1/6"><%= level.title %> (<%= level.points %>)</th>
                  <% end %>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-100">
                <% @assignment.rubric.criteria.each do |criterion| %>
                  <% student_level = @student_work.student_criterion_levels.find { |scl| scl.criterion_id == criterion.id } %>
                  <% achieved_level_title = student_level&.level&.title %>
                  <tr>
                    <td class="py-2 px-3 text-sm font-medium text-gray-900 w-1/3"><%= criterion.title %></td>
                    <% all_levels.each do |level| %>
                      <td class="py-2 px-3 text-center w-1/6">
                        <% if achieved_level_title == level.title %>
                          <% 
                            # Use same color logic as performance badge
                            color_class = case level.title
                                         when "Excellent", "Exceeds" then "border-green-500 bg-green-100"
                                         when "Good", "Meets", "Proficient", "Satisfactory" then "border-blue-500 bg-blue-100"
                                         when "Approaching", "Average", "Needs Improvement" then "border-amber-500 bg-amber-100"
                                         when "Below", "Poor" then "border-red-500 bg-red-100"
                                         else "border-gray-500 bg-gray-100"
                                         end
                          %>
                          <div class="h-8 w-8 mx-auto rounded border-2 <%= color_class %>"></div>
                        <% else %>
                          <div class="h-8 w-8 mx-auto rounded border-2 border-gray-300"></div>
                        <% end %>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Rubric Assessment -->
    <% if @assignment.rubric && @student_work.student_criterion_levels.any? %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-gray-900">Rubric assessment</h2>
            <%= link_to "View rubric →", rubric_path(@assignment.rubric), class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
          </div>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">CRITERION</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ACHIEVEMENT LEVEL</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">EVIDENCE</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @student_work.student_criterion_levels.includes(:criterion, :level).each do |student_criterion_level| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4">
                    <div>
                      <p class="font-medium text-gray-900"><%= student_criterion_level.criterion.title %></p>
                      <% if student_criterion_level.criterion.description.present? %>
                        <p class="text-sm text-gray-600"><%= student_criterion_level.criterion.description %></p>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <% level = student_criterion_level.level %>
                    <% if level %>
                      <div class="flex items-center gap-2">
                        <%= render "shared/performance_badge", level: level.title, size: "sm", show_icon: false %>
                        <span class="text-sm text-gray-600">(<%= level.points %>)</span>
                      </div>
                      <% if level.description.present? %>
                        <p class="text-sm text-gray-600 mt-1"><%= level.description %></p>
                      <% end %>
                    <% else %>
                      <%= render "shared/performance_badge", level: nil, size: "sm", show_icon: false %>
                    <% end %>
                  </td>
                  <td class="px-6 py-4">
                    <% if student_criterion_level.explanation.present? %>
                      <div class="text-sm text-gray-700">
                        <%= simple_format(student_criterion_level.explanation) %>
                      </div>
                    <% else %>
                      <p class="text-sm text-gray-500 italic">No evidence provided</p>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>

    <!-- Feedback Sections -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
      <!-- Strengths -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200 bg-green-50">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center">
            <%= render "shared/icons/checkmark", class: "w-5 h-5 mr-2 text-green-600" %>
            Strengths
          </h3>
        </div>
        <div class="px-6 py-4 space-y-3">
          <% if @student_work.feedback_items.strengths.any? %>
            <% @student_work.feedback_items.strengths.each do |strength| %>
              <div class="flex items-start">
                <%= render "shared/icons/checkmark", class: "w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" %>
                <div>
                  <p class="font-medium text-gray-900"><%= strength.title %></p>
                  <% if strength.description.present? %>
                    <p class="text-sm text-gray-600 mt-1"><%= strength.description %></p>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-sm text-gray-500 italic">No strengths identified yet.</p>
          <% end %>
        </div>
      </div>

      <!-- Areas for Growth -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200 bg-amber-50">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center">
            <%= render "shared/icons/lightning_bolt", class: "w-5 h-5 mr-2 text-amber-600" %>
            Areas for growth
          </h3>
        </div>
        <div class="px-6 py-4 space-y-3">
          <% if @student_work.feedback_items.opportunities.any? %>
            <% @student_work.feedback_items.opportunities.each do |opportunity| %>
              <div class="flex items-start">
                <%= render "shared/icons/exclamation", class: "w-5 h-5 text-amber-500 mr-3 mt-0.5 flex-shrink-0" %>
                <div>
                  <p class="font-medium text-gray-900"><%= opportunity.title %></p>
                  <% if opportunity.description.present? %>
                    <p class="text-sm text-gray-600 mt-1"><%= opportunity.description %></p>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-sm text-gray-500 italic">No growth areas identified yet.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Overall Qualitative Feedback -->
    <% if @student_work.qualitative_feedback.present? %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Overall feedback</h2>
        </div>
        <div class="px-6 py-4">
          <div class="prose max-w-none text-gray-700">
            <%= simple_format(@student_work.qualitative_feedback) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>