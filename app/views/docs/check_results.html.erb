<!-- Main Content -->
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  
  <!-- Introduction -->
  <div class="mb-12 p-6 bg-blue-50 border border-blue-200 rounded-lg">
