<%# SECTION: Hero with product introduction and sign-in CTA %>
<header class="relative isolate overflow-hidden bg-white" role="banner">
  <!-- Background pattern -->
  <svg class="absolute inset-0 -z-10 size-full [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)] stroke-gray-200" aria-hidden="true">
    <defs>
      <pattern id="hero-background-pattern" width="200" height="200" x="50%" y="-1" patternUnits="userSpaceOnUse">
        <path d="M.5 200V.5H200" fill="none" />
      </pattern>
    </defs>
    <rect width="100%" height="100%" stroke-width="0" fill="url(#hero-background-pattern)" />
  </svg>
  <!-- Main hero content -->
  <div class="mx-auto max-w-7xl px-6 pt-10 pb-24 sm:pb-32 lg:flex lg:px-8 lg:py-40">
    <!-- Left column: Text content -->
    <div class="mx-auto max-w-2xl lg:mx-0 lg:shrink-0 lg:pt-8">
      <img class="h-16" src="<%= asset_path('gradebot-logo.png') %>" alt="GradeBot - AI Feedback Assistant for Educators">
      
      <!-- Badges section -->
      <div class="mt-24 sm:mt-32 lg:mt-16">
        <div class="flex flex-wrap gap-y-3 gap-x-6">
          <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800" role="status">
            <span class="flex-none w-2 h-2 rounded-full bg-green-500 mr-2 animate-pulse" aria-hidden="true"></span>
            <span>New: AI-Powered Feedback Assistant</span>
          </div>
        </div>
      </div>
      
      <!-- Main heading and call-to-action -->
      <h1 class="mt-10 text-5xl font-bold tracking-tight text-pretty text-transparent bg-clip-text bg-gradient-to-r from-blue-700 to-blue-500 sm:text-6xl md:text-7xl leading-tight">Your AI feedback assistant</h1>
      <p class="mt-6 text-xl font-medium text-pretty text-gray-700 sm:text-2xl leading-relaxed max-w-xl">Transform hours of grading into minutes of strategic review.</p>
      <div class="mt-10 flex items-center gap-x-6">
        <%= button_to "/auth/google_oauth2",
          method: :post,
          data: { turbo: false },
          class: "group inline-flex items-center justify-center gap-x-2 rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600",
          aria: { label: "Sign in with Google to get started" } do %>
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" aria-hidden="true">
            <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
            <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
            <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
            <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
          </svg>
          <span>Start saving time today</span>
        <% end %>
        <a href="#how-it-works" class="text-sm/6 font-semibold text-gray-900 focus:outline-offset-2 focus:outline-blue-600">See how it works <span aria-hidden="true">→</span></a>
      </div>
    </div>
    <!-- Right column: App preview -->
    <div class="mt-16 sm:mt-24 lg:mt-0 lg:ml-10 lg:flex-none xl:ml-32">
      <div class="mx-auto max-w-3xl sm:max-w-5xl lg:max-w-none">
        <div class="-m-2 rounded-xl bg-gray-900/5 p-2 ring-1 ring-gray-900/10 ring-inset lg:-m-4 lg:rounded-2xl lg:p-4">
          <!-- Feedback card preview -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden w-full" role="region" aria-label="Feedback preview example">
            <!-- Assignment Header -->
            <div class="bg-blue-600 p-6 flex justify-between items-center">
              <div>
                <h2 class="text-white text-2xl font-bold">Literary Analysis Essay</h2>
                <div class="text-blue-100 flex space-x-4 mt-1">
                  <span class="flex items-center"><svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/><path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/></svg>English</span>
                  <span class="flex items-center"><svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/></svg>Grade 10</span>
                </div>
              </div>
              <div class="bg-white rounded-full px-4 py-2 text-blue-700 font-bold text-lg shadow-sm">
                Proficient
              </div>
            </div>
            
            <!-- Summary Tabs -->
            <div class="border-b border-gray-200">
              <nav class="-mb-px flex space-x-6 px-6" aria-label="Feedback Tabs" role="tablist">
                <a href="#strengths-tab" class="py-4 px-1 text-sm font-medium text-blue-600 border-b-2 border-blue-600" role="tab" aria-selected="true" tabindex="0" aria-controls="strengths-opportunities-panel">Strengths & Opportunities</a>
                <a href="#detailed-tab" class="py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700" role="tab" aria-selected="false" tabindex="-1" aria-controls="detailed-feedback-panel">Detailed Feedback</a>
                <a href="#rubric-tab" class="py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700" role="tab" aria-selected="false" tabindex="-1" aria-controls="rubric-panel">Rubric</a>
              </nav>
            </div>
            
            <!-- Feedback Content -->
            <div class="p-6" role="tabpanel" id="strengths-opportunities-panel" aria-labelledby="strengths-tab">
              <!-- Strengths Section -->
              <section class="mb-8" aria-labelledby="strengths-heading">
                <h3 id="strengths-heading" class="text-lg font-semibold text-gray-900 flex items-center">
                  <svg class="h-5 w-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  Strengths
                </h3>
                <div class="mt-4 pl-7">
                  <ul class="space-y-3" aria-label="Student strengths">
                    <li class="flex">
                      <div class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-green-100 text-green-600 mr-3 flex-shrink-0" aria-hidden="true">
                        <span class="text-sm font-medium">1</span>
                      </div>
                      <p class="text-gray-700"><span class="font-medium">Strong thesis statement</span> – Your thesis clearly articulates your main argument about the text's symbolism.</p>
                    </li>
                    <li class="flex">
                      <div class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-green-100 text-green-600 mr-3 flex-shrink-0" aria-hidden="true">
                        <span class="text-sm font-medium">2</span>
                      </div>
                      <p class="text-gray-700"><span class="font-medium">Excellent textual evidence</span> – You consistently support your claims with relevant quotations from the text.</p>
                    </li>
                    <li class="flex">
                      <div class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-green-100 text-green-600 mr-3 flex-shrink-0" aria-hidden="true">
                        <span class="text-sm font-medium">3</span>
                      </div>
                      <p class="text-gray-700"><span class="font-medium">Insightful analysis</span> – Your interpretation shows depth of understanding and goes beyond surface-level observations.</p>
                    </li>
                  </ul>
                </div>
              </section>
              
              <!-- Opportunities Section -->
              <section aria-labelledby="opportunities-heading">
                <h3 id="opportunities-heading" class="text-lg font-semibold text-gray-900 flex items-center">
                  <svg class="h-5 w-5 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  Opportunities
                </h3>
                <div class="mt-4 pl-7">
                  <ul class="space-y-3" aria-label="Areas for improvement">
                    <li class="flex">
                      <div class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-amber-100 text-amber-600 mr-3 flex-shrink-0" aria-hidden="true">
                        <span class="text-sm font-medium">1</span>
                      </div>
                      <p class="text-gray-700"><span class="font-medium">Paragraph organization</span> – Try using stronger topic sentences to guide your reader through your argument.</p>
                    </li>
                    <li class="flex">
                      <div class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-amber-100 text-amber-600 mr-3 flex-shrink-0" aria-hidden="true">
                        <span class="text-sm font-medium">2</span>
                      </div>
                      <p class="text-gray-700"><span class="font-medium">Citation formatting</span> – Review MLA citation guidelines for in-text citations; several are missing page numbers.</p>
                    </li>
                    <li class="flex">
                      <div class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-amber-100 text-amber-600 mr-3 flex-shrink-0" aria-hidden="true">
                        <span class="text-sm font-medium">3</span>
                      </div>
                      <p class="text-gray-700"><span class="font-medium">Conclusion development</span> – Expand your conclusion to more effectively synthesize your analysis and highlight broader implications.</p>
                    </li>
                  </ul>
                </div>
              </section>
              
              <!-- Action Buttons -->
              <div class="mt-8 flex justify-end space-x-4">
                <button type="button" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" aria-label="Save feedback for later">
                  Save Feedback
                </button>
                <button type="button" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" aria-label="Send feedback to student">
                  Send to Student
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
